# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Spark API (Flex MLS)
SPARK_API_KEY=your_oauth_client_id
SPARK_API_SECRET=your_oauth_client_secret
SPARK_REDIRECT_URI=http://localhost:3001/callback

# RentCast API
RENTCAST_API_KEY=your_rentcast_api_key

# Authentication
JWT_SECRET=your_jwt_secret_at_least_32_chars_long
JWT_EXPIRES_IN=7d

# Email (Resend)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=notifications@yourcrm.com

# Encryption (for storing org API credentials - 32 bytes hex encoded)
ENCRYPTION_KEY=your_64_char_hex_string_here

# Server
PORT=3001
NODE_ENV=development
